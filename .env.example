# Legacy Shield - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================================================
# GENERAL
# ============================================================================
NODE_ENV=development
APP_NAME=Legacy Shield
APP_URL=http://localhost:3000

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
# Development: Use local Docker PostgreSQL
# Production: Use Hetzner Managed PostgreSQL
DATABASE_URL=postgresql://legacyshield:devpassword@localhost:5432/legacyshield_dev

# ============================================================================
# REDIS (Cache & Job Queue)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# HETZNER OBJECT STORAGE (S3-compatible)
# ============================================================================
# Development: Use local MinIO (simulates Hetzner Object Storage)
# Production: Use Hetzner Object Storage
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_BUCKET=legacy-shield-vault-dev
STORAGE_REGION=fsn1
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_USE_SSL=false
STORAGE_PATH_STYLE=true

# Production Hetzner values (example):
# STORAGE_ENDPOINT=https://fsn1.your-objectstorage.com
# STORAGE_BUCKET=legacy-shield-vault-eu
# STORAGE_USE_SSL=true
# STORAGE_PATH_STYLE=false

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Session configuration
SESSION_SECRET=your-super-secret-session-key-change-this
SESSION_MAX_AGE=604800000

# CORS
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# EMAIL (Resend)
# ============================================================================
# Sign up at resend.com (use EU region)
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=noreply@legacyshield.com
EMAIL_FROM_NAME=Legacy Shield

# ============================================================================
# PAYMENTS (Stripe)
# ============================================================================
# Get from stripe.com dashboard
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create in Stripe dashboard)
STRIPE_PRICE_ID_MONTHLY=price_monthly_id_here
STRIPE_PRICE_ID_LIFETIME=price_lifetime_id_here

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
# Sentry (error tracking) - use EU region
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Plausible Analytics (EU-based, privacy-focused)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=legacyshield.com

# ============================================================================
# FEATURE FLAGS
# ============================================================================
DATA_RESIDENCY=EU
ENFORCE_EU_ONLY=true
ENABLE_EMERGENCY_ACCESS=true
ENABLE_2FA=true
ENABLE_FILE_SHARING=false

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=100
RATE_LIMIT_UPLOAD_FREE=10
RATE_LIMIT_UPLOAD_PRO=50

# ============================================================================
# DOCUMENT LIMITS
# ============================================================================
FREE_TIER_DOCUMENT_LIMIT=15
FREE_TIER_EMERGENCY_CONTACTS=1
PRO_TIER_DOCUMENT_LIMIT=100
PRO_TIER_EMERGENCY_CONTACTS=5
MAX_FILE_SIZE_BYTES=10485760

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Enable detailed logging in development
DEBUG=legacy-shield:*
LOG_LEVEL=debug

# Prisma
PRISMA_CLI_BINARY_TARGETS=native
